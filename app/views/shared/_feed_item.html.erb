<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="pet">
    <% feed_item %>
    <% @pet=Pet.find(feed_item.pet_id) %>
    <%= link_to feed_item.pet, feed_item.user %>
  </span>
  <span class="content"><%= feed_item %></span>

  <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                  data: { confirm: "You sure?" },
                  title: feed_item.namePet %>
  <% end %>
</li>